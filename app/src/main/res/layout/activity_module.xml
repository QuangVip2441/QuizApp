<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.ModuleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="20dp"
        android:padding="12dp"
        android:orientation="vertical"
        android:background="@drawable/background_circular">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginEnd="6dp"
                android:orientation="vertical"
                android:background="@drawable/background_circular"
                android:backgroundTint="@color/colorwhitegray">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/buttonQuizModule1"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/icon_module_1"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Module 1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/background_circular"
                android:backgroundTint="@color/colorwhitegray">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/buttonQuizModule2"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/ic_module_2"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Module 2"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/background_circular"
                android:backgroundTint="@color/colorwhitegray">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/buttonQuizModule3"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/icon_module_3"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Module 3"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/background_circular"
                android:backgroundTint="@color/colorwhitegray">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/buttonQuizModule4"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/icon_module_4"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Module 4"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/background_circular"
                android:backgroundTint="@color/colorwhitegray">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/buttonQuizModule5"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/icon_module_5"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Module 5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/background_circular"
                android:backgroundTint="@color/colorwhitegray">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/buttonQuizModule6"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/icon_module_6"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Module 6"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>